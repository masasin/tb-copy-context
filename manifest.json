{
  "manifest_version": 3,
  "name": "Copy Message Context",
  "version": "1.1",
  "permissions": [
    "messagesRead",
    "clipboardWrite",
    "menus",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "commands": {
    "copy_message_context": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "Copy details of selected messages"
    }
  }
}
